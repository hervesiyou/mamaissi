{% extends 'base.html.twig' %}

{% block title %}Programmes index{% endblock %}

{% block body %}
    <h1>Programmes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Dateinscription</th>
                <th>Duree</th>
                <th>Nom</th>
                <th>Slug</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for programme in programmes %}
            <tr>
                <td>{{ programme.id }}</td>
                <td>{{ programme.dateinscription ? programme.dateinscription|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ programme.duree }}</td>
                <td>{{ programme.nom }}</td>
                <td>{{ programme.slug }}</td>
                <td>{{ programme.description }}</td>
                <td>
                    <a href="{{ path('app_programmes_show', {'id': programme.id}) }}">show</a>
                    <a href="{{ path('app_programmes_edit', {'id': programme.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_programmes_new') }}">Create new</a>
{% endblock %}
