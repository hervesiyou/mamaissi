{% extends 'base.html.twig' %}

{% block title %}CommandeExames index{% endblock %}

{% block body %}
    <h1>CommandeExames index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Description</th>
                <th>Dateajout</th>
                <th>Dateeffectuation</th>
                <th>Domicile</th>
                <th>Labo</th>
