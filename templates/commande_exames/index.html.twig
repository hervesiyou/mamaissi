                <td>{{ commande_exame.ville }}</td>
                <td>{{ commande_exame.quartier }}</td>
                <td>
                    <a href="{{ path('app_commande_exames_show', {'id': commande_exame.id}) }}">show</a>
                    <a href="{{ path('app_commande_exames_edit', {'id': commande_exame.id}) }}">edit</a>
