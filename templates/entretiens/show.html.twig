{% extends 'base.html.twig' %}

{% block title %}Entretiens{% endblock %}

{% block body %}
    <h1>Entretiens</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entretien.id }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ entretien.telephone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ entretien.email }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ entretien.date ? entretien.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ entretien.ville }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ entretien.message }}</td>
            </tr>
            <tr>
                <th>Dateprevue</th>
                <td>{{ entretien.dateprevue }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_entretiens_index') }}">back to list</a>

    <a href="{{ path('app_entretiens_edit', {'id': entretien.id}) }}">edit</a>

