{% extends 'base.html.twig' %}

{% block title %}Entretiens index{% endblock %}

{% block body %}
    <h1>Entretiens index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>Date</th>
                <th>Ville</th>
                <th>Message</th>
                <th>Dateprevue</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entretien in entretiens %}
            <tr>
                <td>{{ entretien.id }}</td>
                <td>{{ entretien.telephone }}</td>
                <td>{{ entretien.email }}</td>
                <td>{{ entretien.date ? entretien.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ entretien.ville }}</td>
                <td>{{ entretien.message }}</td>
                <td>{{ entretien.dateprevue }}</td>
                <td>
                    <a href="{{ path('app_entretiens_show', {'id': entretien.id}) }}">show</a>
                    <a href="{{ path('app_entretiens_edit', {'id': entretien.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_entretiens_new') }}">Create new</a>
{% endblock %}
